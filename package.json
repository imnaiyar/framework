{
  "name": "@imnaiyar/framework",
  "version": "1.0.0",
  "description": "A simple framework for discord bot based on discord.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imnaiyar/framework.git"
  },
  "keywords": [
    "discord",
    "framework"
  ],
  "author": "NyR",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imnaiyar/framework/issues"
  },
  "homepage": "https://github.com/imnaiyar/framework#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.15.3",
    "eslint": "8.57.0",
    "eslint-plugin-jsdoc": "^48.9.2",
    "luxon": "^3.4.4",
    "prettier-plugin-ejs": "^1.0.3"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "imports": {
    "#handlers": [
      "./dist/handlers/index.js"
    ],
    "#handlers/*": [
      "./dist/handlers/*.js"
    ],
    "#src/*": [
      "./dist/*.js"
    ],
    "#structures/*": [
      "./dist/structures/*.js"
    ],
    "#structures": [
      "./dist/structures/index.js"
    ],
    "#libs/*": [
      "./dist/libs/*.js"
    ],
    "#libs": [
      "./dist/libs/index.js"
    ]
  }
}

